<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:strokeColor="#E8F5E9"
    app:strokeWidth="2dp"
    app:cardBackgroundColor="#F1F8E9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Material Info Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Material Name and Price -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">

                <TextView
                    android:id="@+id/tv_material_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Steel"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary" />

                <TextView
                    android:id="@+id/tv_material_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="KSH 450/kg"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:background="#E0E0E0"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="2dp"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

            <!-- Weight and Value -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_material_weight"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="25.50 kg"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary" />

                <TextView
                    android:id="@+id/tv_material_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="KSH 11,475.00"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/success"
                    android:layout_marginStart="12dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Remove Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_remove_material"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="12dp"
            app:icon="@android:drawable/ic_delete"
            app:iconTint="@color/error"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:backgroundTint="@android:color/transparent"
            app:strokeColor="@color/error"
            app:strokeWidth="1dp"
            app:cornerRadius="18dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>