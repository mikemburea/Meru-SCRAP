<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_printer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:rippleColor="@color/ripple_color"
    app:strokeColor="@color/card_stroke"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Printer Icon -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="16dp"
            app:cardBackgroundColor="@color/icon_background"
            app:cardCornerRadius="24dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/iv_printer_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_printer_generic"
                app:tint="@color/icon_tint" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Printer Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Printer Name -->
            <TextView
                android:id="@+id/tv_printer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thermal Printer"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- MAC Address -->
            <TextView
                android:id="@+id/tv_printer_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:11:22:33:44:55"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:layout_marginTop="2dp"
                android:fontFamily="monospace" />

        </LinearLayout>

        <!-- Status Indicator -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end">

            <TextView
                android:id="@+id/tv_printer_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Available"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="@drawable/status_badge_background"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp" />

            <!-- Signal Strength Indicator (optional) -->
            <LinearLayout
                android:id="@+id/layout_signal_strength"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:visibility="gone">

                <View
                    android:layout_width="3dp"
                    android:layout_height="8dp"
                    android:layout_marginEnd="2dp"
                    android:background="@color/signal_bar_active" />

                <View
                    android:layout_width="3dp"
                    android:layout_height="12dp"
                    android:layout_marginEnd="2dp"
                    android:background="@color/signal_bar_active" />

                <View
                    android:layout_width="3dp"
                    android:layout_height="16dp"
                    android:layout_marginEnd="2dp"
                    android:background="@color/signal_bar_inactive" />

                <View
                    android:layout_width="3dp"
                    android:layout_height="20dp"
                    android:background="@color/signal_bar_inactive" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Selection Ripple Effect -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/selectableItemBackground"
        android:clickable="false"
        android:focusable="false" />

</com.google.android.material.card.MaterialCardView>